{
  "name": "utc-particle",
  "version": "20.01",
  "description": "Drupal Theme for UTC",
  "author": {
    "name": "Vardot & Phase2 Technology",
    "url": "https://vardot.com"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:UTCWeb/particle.git"
  },
  "keywords": [
    "drupal-theme"
  ],
  "scripts": {
    "dev:drupal": "cross-env-shell NODE_ENV=development \"webpack --watch --config ./webpack.config.js\"",
    "build:drupal": "cross-env-shell NODE_ENV=production \"webpack --config ./webpack.config.js\"",
    "build:drupal:dev": "cross-env-shell NODE_ENV=development \"webpack --config ./webpack.config.js\"",
    "lint": "npm run lint:js; npm run lint:css;",
    "lint:js": "eslint --ext .js ./",
    "lint:css": "stylelint '**/*.css'",
    "fmt": "npm run fmt:js; npm run fmt:css; prettier --write .",
    "fmt:js": "npm run lint:js -- --fix",
    "fmt:css": "npm run lint:css -- --fix && prettier --write '**/*.css'"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@tailwindcss/forms": "^0.5.7",
    "core-js": "^3.6.5",
    "eslint-import-resolver-webpack": "^0.13.8",
    "tailwindcss": "^3.4.4"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/eslint-parser": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@zackad/prettier-plugin-twig-melody": "^0.6.0",
    "babel-loader": "^9.1.3",
    "cross-env": "^7.0.2",
    "css-loader": "^7.1.2",
    "cssnano": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-webpack-plugin": "^4.2.0",
    "file-loader": "^6.0.0",
    "mini-css-extract-plugin": "^2.9.0",
    "postcss-cli": "^11.0.0",
    "postcss-hexrgba": "^2.1.0",
    "postcss-loader": "^7.0.2",
    "postcss-preset-env": "^9.5.15",
    "postcss-reporter": "^7.1.0",
    "prettier": "3.3.2",
    "resolve-url-loader": "^5.0.0",
    "style-loader": "^1.2.1",
    "stylelint": "^15.11.0",
    "stylelint-checkstyle-formatter": "^0.1.2",
    "stylelint-config-recommended": "^13.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "url-loader": "^4.1.1",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4",
    "webpack-merge": "^6.0.1"
  }
}
